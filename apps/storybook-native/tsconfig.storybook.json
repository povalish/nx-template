{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "emitDecoratorMetadata": true
  },
  "exclude": ["src/**/*.spec.ts", "src/**/*.test.ts"],
  "include": [
    "src/**/*.stories.ts",
    "src/**/*.stories.js",
    "src/**/*.stories.jsx",
    "src/**/*.stories.tsx",
    "src/**/*.tsx",
    "../../libs/ui-kit/**/*.tsx",
    "../../libs/ui-kit/**/*.ts",
    "src/**/*.stories.mdx",
    ".storybook/*.js",
    ".storybook/*.ts",
    "*.ts",
    "*.tsx",
  ]
}
